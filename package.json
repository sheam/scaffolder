{
  "name": "template-scaffolder",
  "repository": "https://github.com/sheam/template-scaffolder",
  "version": "1.0.11",
  "description": "multi-file scaffolding with velocity template for any type of project",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "type": "module",
  "engines": {
    "node": ">=14.16"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "scaffolder": "./dist/index.mjs"
  },
  "scripts": {
    "prepare": "husky",
    "lint:pre-commit": "npx eslint --fix",
    "format:pre-commit": "npx prettier --write",
    "format:all": "npx prettier --write src",
    "lint:all": "npx eslint --fix src/**",
    "pre-commit": "npx lint-staged",
    "publish-to-npm": "npm run build && npm publish",
    "patch-version": "npm version patch",
    "build": "npm run clean && npm run compile && npm run types",
    "types": "tsc --emitDeclarationOnly -d src/types.ts  -outDir dist",
    "compile": "tsc",
    "compile-watch": "tsc --watch",
    "debug": "tsx src/test.mts",
    "test-run": "npm run compile && node dist/index.mjs --template=component --overwrite",
    "test-ts": "npm run compile && cross-env DEBUG=true node dist/index.mjs --overwrite",
    "clean": "npx rimraf dist"
  },
  "keywords": [
    "scaffolding"
  ],
  "author": "Shea Martin",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^18.7.18",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^4.9.5",
    "config-file-ts": "^0.2.8-rc1",
    "prettier": "^3.3.3",
    "lint-staged": "^15.2.10",
    "husky": "^9.1.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4"
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.1",
    "node-cli-arg-by-config": "^0.11.0",
    "velocityjs": "^2.0.6"
  }
}
