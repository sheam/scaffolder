{
  "name": "template-scaffolder",
  "repository": "https://github.com/sheam/template-scaffolder",
  "version": "1.0.11",
  "description": "multi-file scaffolding with velocity template for any type of project",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "type": "module",
  "engines": {
    "node": ">=14.16"
  },
  "bin": {
    "scaffolder": "./dist/index.mjs"
  },
  "scripts": {
    "publish-to-npm": "npm run build && npm publish",
    "patch-version": "npm version patch -m \"updating version for publish\"",
    "build": "npm run clean && npm run compile && npm run types",
    "types": "tsc --emitDeclarationOnly -d src/types.ts  -outDir dist",
    "compile": "tsc",
    "compile-watch": "tsc --watch",
    "debug": "tsx src/test.mts",
    "test-run": "npm run compile && node dist/index.mjs --template=component --overwrite",
    "test-ts": "npm run compile && node dist/index.mjs --overwrite",
    "clean": "npx rimraf dist"
  },
  "keywords": [
    "scaffolding"
  ],
  "author": "Shea Martin",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^18.7.18",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.1",
    "node-cli-arg-by-config": "^0.11.0",
    "velocityjs": "^2.0.6"
  }
}
